{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "tsc.js",
    "sourceMap": true,
    "target": "ES5",
    "outDir": "tsc.js",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
